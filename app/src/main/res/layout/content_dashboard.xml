<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_smsview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS Will show up here"/>

        <Button
            android:id="@+id/bt_test_slackIntegration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slack Test"
            android:layout_marginTop="20dp"
            android:onClick="onSlackTestButtonClicked"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_tmp_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_tmp_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_tmp_save_to_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to DB"
            android:layout_marginTop="20dp"
            android:onClick="onBTSaveTMPClicked"/>
        <TextView
            android:id="@+id/tv_tmp_data_from_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data from db will show up here..."/>

    </LinearLayout>
</ScrollView>